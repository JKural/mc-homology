{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default preset",
      "description": "The default preset to build the project",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "True",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
      }
    }
  ]
}
